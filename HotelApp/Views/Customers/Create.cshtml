                <div class="row mb-3">
                    <label asp-for="CustomerHotels.Select(c=>c.DateOfEntry)" class="col-2 col-form-label"></label>
                    <div class="col-5">
                        <input asp-for="CustomerHotels.Select(c=>c.DateOfEntry)" class="form-control" />
                        <span asp-validation-for="CustomerHotels.Select(c=>c.DateOfEntry)" class="text-danger"></span>
                    </div>
                </div>*@
                @* <div class="form-group">
                <label asp-for="CustomerRoom" class="control-label"></label>
                <select asp-for="CustomerRoom" class="form-control" asp-items="ViewBag.RoomId">
                <option value="">-- Select --</option>
                </select>
                <span asp-validation-for="CustomerRoom" class="text-danger"></span>

                </div>*@

            </div>

            <div class="row mb-3">
                <div class="offset-2 col-5">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    &nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Reset</button>
                    &nbsp;&nbsp;
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>




