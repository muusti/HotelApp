@using DataAccess.Enums
@model DataAccess.Entities.Customer

@{
    ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="LastName" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="DateOfBirth" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="DateOfBirth" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>

                <input type="radio" asp-for="Gender" value="@((int)Gender.Male)" checked /> @Gender.Male
                <input type="radio" asp-for="Gender" value="@((int)Gender.Women)" /> @Gender.Women

            </div>

            <div class="row mb-3">
                <label asp-for="CustomerDetails.PhoneNumber" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="CustomerDetails.PhoneNumber" class="form-control" />
                    <span asp-validation-for="CustomerDetails.PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="CustomerDetails.IdentificationNo" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="CustomerDetails.IdentificationNo" class="form-control" />
                    <span asp-validation-for="CustomerDetails.IdentificationNo" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="CustomerDetails.Email" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="CustomerDetails.Email" class="form-control" />
                    <span asp-validation-for="CustomerDetails.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="CustomerDetails.Address" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="CustomerDetails.Address" class="form-control" />
                    <span asp-validation-for="CustomerDetails.Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CustomerDetails.CountryId" class="control-label"></label>
                    <select asp-for="CustomerDetails.CountryId" class="form-control" asp-items="ViewBag.CountryId">
                        <option value="">-- Select --</option>
                    </select>
                    <span asp-validation-for="CustomerDetails.CountryId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CustomerDetails.CityId" class="control-label"></label>
                    <select asp-for="CustomerDetails.CityId" class="form-control" asp-items="ViewBag.CityId">
                        <option value="">-- Select --</option>
                    </select>
                    <span asp-validation-for="CustomerDetails.CityId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CustomerHotels" class="control-label"></label>
                    <select asp-for="CustomerHotels" class="form-control" asp-items="ViewBag.HotelId">
                        <option value="">-- Select --</option>
                    </select>
                    <span asp-validation-for="CustomerHotels" class="text-danger"></span>

                </div>
